@using Ecomaerce.Models.Home
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MyLayout.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="position:fixed;top:0px;overflow:hidden; z-index:2; width:100%;">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.png" width="40" height="30" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("About","Home")">AboutUs <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("contact","Home")">Contact <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <form method="Post" class="form-inline my-2 my-lg-0">
                    <input type="text" id="search_value" class="form-control mr-sm-2" placeholder="What are you looking for?" autocomplete="off" tabindex="-1" name="searchKey">
                    <div class="searchIcon">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa fa-search" style="font-size:15px;"></i></button>
                    </div>
                </form>
                <div class="col-lg-1 col-md-1 col-sm-1">
                    <div class="dropdown nav navbar-nav navbar-right">
                        <a href=@Url.Action("cartDetail","Home")>Cart<i class="fa fa-shopping-cart"></i></a>

                    </div>
                </div>
            </div>
        </nav>
        <br /><br />

        <h1>
        </h1>
        <h1>
        </h1>
        <h1>
        </h1>
        <br />
        @Html.Partial("_LoginPartial")
        @RenderBody()
        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12 copyright">
                <div class="col-lg-6 col-md-6 col-sm-6 copyright-right">
                    <ul class="list-unstyled list-social">
                        <li><a href="#" target="_blank"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
    <br />
</body>
</html>

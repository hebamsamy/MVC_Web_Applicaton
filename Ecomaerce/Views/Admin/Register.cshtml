@model  Ecomaerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    
}

<div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">

                    @using (Html.BeginForm("Register", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group">
                            @*@Html.LabelFor(m => m.Email, new { @class = "form-control input-sm" })*@
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new {placeholder="Enter Your Email", @class = "form-control input-sm" })
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new {placeholder="Enter Your Password", @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new {placeholder="Enter Your Password", @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-info btn-block" value="Register" />
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
</div>
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

<style>
    body{
    background-color: #525252;
}
.centered-form{
	margin-top: 60px; 
}

.centered-form .panel{
	background: rgba(255, 255, 255, 0.8);
	box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>